{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "lib": [
      "dom",
      "esnext"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": true,
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "rootDir": "./src",
    "target": "es2019",
    "typeRoots": [
      "./node_modules/@types/"
    ],
    "types": [
      "node"
    ]
  }
}
