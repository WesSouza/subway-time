{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "api/*": ["src/api/*"],
      "components/*": ["src/components/*"],
      "data/*": ["src/data/*"],
      "models/*": ["src/models/*"],
      "lib/*": ["src/lib/*"],
      "screens/*": ["src/screens/*"]
    },
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es2018",
    "lib": ["es2018", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "acceptance-tests",
    "build",
    "config",
    "config.js",
    "jest",
    "node_modules",
    "server",
    "scripts",
    "src/setupTests.ts",
    "webpack"
  ]
}
