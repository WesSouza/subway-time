{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "inlineSourceMap": false,
    "inlineSources": false,
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "strict": true,
    "rootDir": "./src",
    "target": "es2017",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  }
}
